<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewWord"
        android:layout_toStartOf="@+id/buttonGuess"
        android:layout_above="@+id/textViewWord"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewWord"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_above="@+id/textViewInfo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewInfo"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_above="@+id/textViewCount"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewCount"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_above="@+id/textViewUsed"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewUsed"
        android:background="#ffffff"
        android:layout_above="@+id/textViewTime"
        android:layout_alignParentStart="false"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editTextGuess"
        android:hint="Indtast Bogstav"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonGuess"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GÃ¦t"
        android:id="@+id/buttonGuess"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewTime"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_above="@+id/buttonGuess"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

</RelativeLayout>
